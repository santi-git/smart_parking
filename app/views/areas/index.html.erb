<div class="row">
  <div class="col s12 offset-l3 l6">
    <h4>Areas</h4>
    <ul class="collection with-header" data-collapsible="accordion">
    <% @areas.each do |area| %>
      <li class="collection-header"><h4><%= fa_icon 'map-marker', class: 'marker' %>  <%= area.name %></h4></li>
      <% area.spots.each do |spot| %>
        <li class="collection-item">
          <div class="row">
            <div class="col l6">
              Parcela <%= spot.number %>
            </div>
            <div class="col l3">
              <span class="right-align" href=""><%= spot.state %></span>
            </div>
            <div class="col l3">
              <%= reserve_link(spot) %>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>
