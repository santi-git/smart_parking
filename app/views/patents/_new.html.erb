<%= form_for @patent do |f| %>
  <% if @patent.errors.any? %>
    <ul>
    <% @patent.errors.full_messages.each do |message| %>
      <li><%= message %>
    <% end %>
    </ul>
  <% end %>
  <div class="input">
    <%= f.label :numero %>
    <%= f.text_field :number, autofocus: true %>
  </div>

  <div class="right-align">
    <div class="input">
      <%= f.submit "Agregar", class: 'btn' %>
    </div>
  </div>
<% end %>