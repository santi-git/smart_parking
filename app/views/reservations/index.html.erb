<div class="row">
	<div class="col offset-s2 s8 card">
		<h5><%= fa_icon 'info-circle', class: 'icon' %> Operaciones</h5>
		<table class="responsive-table">
			<thead>
				<tr>
					<th>Patente</th>
					<th>Fecha de Inicio</th>
					<th>Parcela</th>
					<th>Area</th>
					<th>Fecha de Fin</th>
					<th>Importe</th>
				</tr>
			</thead>
			<tbody>
			<% current_user.reservations.each do |reservation| %>
				<tr>
					<td><%= reservation.patent.number %></td>
					<td><%= reservation.start_at.strftime('%d/%m/%Y %H:%M:%S') %></td>
					<td><%= reservation.spot.number %></td>
					<td><%= reservation.spot.area.name %></td>
					<% if reservation.ends_at.nil? %>
						<td>No Finaliz&oacute;</td>
						<td>No Finaliz&oacute;</td>
					<% else %>
						<td><%= reservation.ends_at.strftime('%d/%m/%Y %H:%M:%S') %></td>
						<td>$<%= reservation.amount %></td>
					<% end %>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>